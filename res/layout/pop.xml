<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="35dp"
    android:paddingTop="5dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >
    
    <RelativeLayout
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" >
        
	    <ImageView
	        android:id="@+id/poiImage"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/imagebutton_description"
	        android:src="@drawable/wawa" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/poiImage"
	        android:layout_alignRight="@+id/poiImage"
	        android:background="@drawable/llayout_map_bg"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/poiName"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:maxWidth="150dp"
	            android:singleLine="true"
	            android:textColor="#FF4500"
	            android:text="title"
	            android:textAppearance="?android:attr/textAppearanceLarge" />
	
	        <!--
	             <TextView
	            android:id="@+id/poiTime"
	            android:layout_width="wrap_content"
	            android:layout_height="22dp"
	            android:singleLine="true"
	            android:gravity="center_vertical"
	            android:maxWidth="150dp"
	            android:text="" />
	        -->
	
	        <TextView
	            android:id="@+id/poiDiary"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center_vertical"
	            android:maxLines="2"
	            android:textColor="#FF4500"
	            android:ellipsize="end"
	            android:text="FFFFFFFFFF" />
	    </LinearLayout>
    
    </RelativeLayout>

</LinearLayout>